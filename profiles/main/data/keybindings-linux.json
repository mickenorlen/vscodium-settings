// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+k ctrl+s",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "tab",
        "command": "editor.action.indentLines",
        "when": "editorHasSelection && !inSnippetMode"
    },
    {
        "key": "shift+tab",
        "command": "outdent",
        "when": "editorTextFocus && !editorReadonly && !editorTabMovesFocus && !inSnippetMode"
    },
    {
        "key": "tab",
        "command": "-editor.emmet.action.expandAbbreviation",
        "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
    },
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpenNavigateNextInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "ctrl+alt+n",
        "command": "-gitProjectManager.openProjectNewWindow"
    },
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.openRecent"
    },
    {
        "key": "ctrl+r",
        "command": "-workbench.action.openRecent"
    },
    {
        "key": "ctrl+shift+g",
        "command": "workbench.view.scm",
        "when": "gitlens:enabled && config.gitlens.keymap == 'chorded'"
    },
    {
        "key": "ctrl+shift+c",
        "command": "-workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+shift+alt+c",
        "command": "gitlens.diffWorkingWithBranch"
    },
    {
        "key": "ctrl+shift+alt+[Equal]",
        "command": "workbench.action.terminal.new"
    },
    {
        "key": "shift+alt+c",
        "command": "gitlens.diffWorkingWith"
    },
    {
        "key": "ctrl+e",
        "command": "editor.emmet.action.expandAbbreviation",
        "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
    },
    {
        "key": "ctrl+shift+w w",
        "command": "editor.emmet.action.wrapWithAbbreviation"
    },
    {
        "key": "ctrl+shift+w a",
        "command": "editor.emmet.action.wrapIndividualLinesWithAbbreviation"
    },
    {
        "key": "ctrl+shift+c",
        "command": "gitlens.views.searchAndCompare.focus",
        "when": "!terminalFocus"
    }
]
